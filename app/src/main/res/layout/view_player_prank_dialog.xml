<?xml version="1.0" encoding="utf-8"?>
<wishcantw.vocabulazy.activities.player.view.PlayerPrankDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_dialog_prank_background"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/player_dialog_prank_content_width"
        android:layout_height="@dimen/player_dialog_prank_content_height"
        android:translationZ="@dimen/player_dialog_prank_content_translation_z">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/player_prank_dialog_yes_no_container"
                android:paddingTop="@dimen/player_dialog_prank_content_padding"
                android:paddingLeft="@dimen/player_dialog_prank_content_padding"
                android:paddingRight="@dimen/player_dialog_prank_content_padding">

                <TextView
                    android:id="@+id/player_prank_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/player_dialog_prank_title_margin"
                    android:textColor="@color/player_dialog_prank_text"
                    android:text="@string/player_dialog_prank_title"
                    android:textSize="@dimen/player_dialog_prank_content_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_prank_dialog_yes_no_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/player_dialog_prank_content_yes_no_container_height"
                android:layout_alignParentBottom="true"
                android:translationZ="@dimen/player_dialog_prank_content_yes_no_container_translation_z">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/player_prank_dialog_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/player_dialog_prank_content_yes_no_container_margin"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_dialog_prank_yes"
                            android:textSize="@dimen/player_dialog_prank_content_text_size"
                            android:textColor="@color/green_1"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</wishcantw.vocabulazy.activities.player.view.PlayerPrankDialogView>