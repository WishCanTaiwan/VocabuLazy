<?xml version="1.0" encoding="utf-8"?>
<com.wishcan.www.vocabulazy.mainmenu.note.view.NoteCreateDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/player_dialog_new_note_background">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/player_dialog_new_note_content_width"
        android:layout_height="@dimen/player_dialog_new_note_content_height"
        android:translationZ="@dimen/note_dialog_rename_translation_z">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/player_dialog_add_voc_to_note_content_padding"
            android:paddingLeft="@dimen/player_dialog_add_voc_to_note_content_padding"
            android:paddingRight="@dimen/player_dialog_add_voc_to_note_content_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_create_dialog_title"
                android:textSize="@dimen/player_dialog_new_note_content_text_size"
                android:textColor="#ff444b53" />

            <EditText
                android:id="@+id/note_create_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/note_create_dialog_hint"
                android:textSize="@dimen/player_dialog_new_note_content_text_size"
                android:textColorHint="#ff9fa0a0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:id="@+id/note_create_cancel"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_create_dialog_cancel"
                        android:textSize="@dimen/player_dialog_add_voc_to_note_content_text_size"
                        android:textColor="@color/green_1"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:id="@+id/note_create_confirm"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_create_dialog_confirm"
                        android:textSize="@dimen/player_dialog_add_voc_to_note_content_text_size"
                        android:textColor="@color/green_1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.wishcan.www.vocabulazy.mainmenu.note.view.NoteCreateDialogView>