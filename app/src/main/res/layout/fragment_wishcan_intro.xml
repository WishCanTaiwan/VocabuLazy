<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:background="@color/white_2">

    <TextView
        android:id="@+id/wishcan_intro_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/info_wishcan_introduction"
        android:textSize="22sp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"/>

    <View
        android:id="@+id/wishcan_intro_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_6"
        android:layout_below="@id/wishcan_intro_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wishcan_intro_divider"/>

</RelativeLayout>