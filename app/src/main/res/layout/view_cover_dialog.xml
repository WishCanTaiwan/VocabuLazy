<wishcantw.vocabulazy.activities.cover.view.CoverDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_alpha_2"
    android:elevation="10dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="5dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/green_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_input"
                android:layout_width="@dimen/cover_dialog_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/cover_dialog_vertical_margin"
                android:layout_marginBottom="@dimen/cover_dialog_vertical_margin"
                android:layout_marginLeft="@dimen/cover_dialog_horizontal_margin"
                android:layout_marginRight="@dimen/cover_dialog_horizontal_margin"
                android:text="@string/cover_dialog_message"
                android:textColor="@color/cover_dialog_text"
                android:textSize="@dimen/cover_dialog_input_text_size" />

            <LinearLayout
                android:id="@+id/cover_dialog_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/cover_dialog_vertical_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/cover_dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/cover_dialog_button_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/cover_dialog_horizontal_margin"
                    android:layout_marginRight="@dimen/cover_dialog_horizontal_margin"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cover_dialog_white_cross"
                        android:paddingRight="@dimen/cover_dialog_ox_padding"
                        android:paddingEnd="@dimen/cover_dialog_ox_padding"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/cover_dialog_button_text_size"
                        android:textColor= "@color/cover_dialog_text"
                        android:text     ="@string/cover_dialog_button_cancel" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cover_dialog_confirm"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/cover_dialog_button_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/cover_dialog_horizontal_margin"
                    android:layout_marginRight="@dimen/cover_dialog_horizontal_margin"
                    android:textSize    ="@dimen/cover_dialog_button_text_size"
                    android:text="@string/cover_dialog_button_confirm"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cover_dialog_white_circle"
                        android:paddingRight="@dimen/cover_dialog_ox_padding"
                        android:paddingEnd="@dimen/cover_dialog_ox_padding"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/cover_dialog_button_text_size"
                        android:textColor= "@color/cover_dialog_text"
                        android:text     ="@string/cover_dialog_button_confirm" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</wishcantw.vocabulazy.activities.cover.view.CoverDialogView>
