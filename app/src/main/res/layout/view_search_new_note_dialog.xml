<?xml version="1.0" encoding="utf-8"?>
<com.wishcan.www.vocabulazy.search.view.SearchNewNoteDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black_alpha_1">

    <android.support.v7.widget.CardView
        android:layout_width="295dp"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/search_new_note_dialog_yes_no_container"
                android:paddingTop="@dimen/search_dialog_add_voc_to_note_content_padding"
                android:paddingLeft="@dimen/search_dialog_add_voc_to_note_content_padding"
                android:paddingRight="@dimen/search_dialog_add_voc_to_note_content_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新增筆記清單"
                    android:textSize="20sp"
                    android:textColor="#ff444b53"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="為筆記命名..."
                    android:textSize="20sp"
                    android:textColorHint="#ff9fa0a0"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/search_new_note_dialog_yes_no_container"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:translationZ="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/search_new_note_dialog_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/search_dialog_add_voc_to_note_content_yes_no_container_margin"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="選擇"
                            android:textSize="@dimen/search_dialog_add_voc_to_note_content_text_size"
                            android:textColor="@color/green_1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/search_new_note_dialog_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/search_dialog_add_voc_to_note_content_yes_no_container_margin"
                        android:layout_toLeftOf="@+id/search_new_note_dialog_yes"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取消"
                            android:textSize="@dimen/search_dialog_add_voc_to_note_content_text_size"
                            android:textColor="@color/green_1"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.wishcan.www.vocabulazy.search.view.SearchNewNoteDialogView>