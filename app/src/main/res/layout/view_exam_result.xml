<?xml version="1.0" encoding="utf-8"?>
<com.wishcan.www.vocabulazy.exam.view.ExamResultView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exam.activity.ExamActivity">

    <ProgressBar
        android:id="@+id/exam_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:max="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51.7dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/exam_result_container">

            <!-- Left image container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Right Text information -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center">
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="測驗結束！"
                        android:textSize="30sp"
                        android:textColor="@color/green_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28.6dp"
                        android:text="答對5題"
                        android:textSize="23sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28.6dp"
                        android:text="答對率50%"
                        android:textSize="23sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.wishcan.www.vocabulazy.exam.view.ExamResultAnswerView
            android:id="@+id/exam_result_try_again"
            android:layout_width="match_parent"
            android:layout_height="69.3dp"
            android:layout_marginTop="61.6dp"
            android:background="@drawable/exam_result_answer"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再測一次"
                android:textSize="20.8sp"
                android:textColor="@color/white_1"/>

        </com.wishcan.www.vocabulazy.exam.view.ExamResultAnswerView>

        <com.wishcan.www.vocabulazy.exam.view.ExamResultAnswerView
            android:id="@+id/exam_result_try_other"
            android:layout_width="match_parent"
            android:layout_height="69.3dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/exam_result_answer"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="試試其他單元"
                android:textSize="20.8sp"
                android:textColor="@color/white_1"/>

        </com.wishcan.www.vocabulazy.exam.view.ExamResultAnswerView>

    </LinearLayout>

</com.wishcan.www.vocabulazy.exam.view.ExamResultView>