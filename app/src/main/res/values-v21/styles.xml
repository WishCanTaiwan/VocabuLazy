<resources>
    <style name="MyThemeForMainActivity" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@color/theme_color_green</item>
        <item name="android:colorPrimaryDark">@color/theme_color_green</item>
        <item name="android:actionBarSize">33dp</item>
        <item name="android:windowAnimationStyle">@style/MyMainActivityAnimation</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
    </style>

    <style name="MyMainActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/main_activity_enter_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_translate_from_right_to_center</item>
        <item name="android:activityCloseEnterAnimation">@anim/main_activity_enter_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_translate_from_center_to_right</item>
    </style>

    <style name="MyThemeForSearchActivity" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@color/theme_color_green</item>
        <item name="android:colorPrimaryDark">@color/theme_color_green</item>
        <item name="android:actionBarSize">36dp</item>
        <item name="android:windowAnimationStyle">@style/MySearchActivityAnimation</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
    </style>

    <style name="MySearchActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_translate_from_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/main_activity_enter_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_translate_from_center_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_translate_from_center_to_right</item>
    </style>


</resources>