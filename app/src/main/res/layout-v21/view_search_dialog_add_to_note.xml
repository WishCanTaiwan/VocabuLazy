<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/search_result_add_to_note_dialog_width"
    android:layout_height="@dimen/search_result_add_to_note_dialog_height"
    android:layout_gravity="center"

    >

    <include layout="@layout/view_search_dialog_add_to_note_title" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#30000000"
        android:clipToPadding="false">
        <ListView
            android:id="@+id/search_dialog_list_view"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:divider="#ffb3b3b5"
            />
    </RelativeLayout>

</LinearLayout>